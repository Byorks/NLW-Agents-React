{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",

    // Faz o Typescript apenas fazer a checagem de Tipos(typechecking) e não fazer o bundling - sem build
    // build - converter Typescript para Javascript
    // Node já tem suporte nativo para Typescript
    "noEmit": true,
    // Permite que importe arquivos Typescript
    "allowImportingTsExtensions": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}